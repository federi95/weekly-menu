{
	"name": "@weekly-menu/api",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\"",
		"lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"db:studio": "dotenvx run --convention=nextjs --quiet -- prisma studio",
		"db:generate": "dotenvx run --convention=nextjs --quiet -- prisma generate",
		"db:migrate": "dotenvx run --convention=nextjs --quiet -- prisma migrate dev --name init"
	},
	"dependencies": {
		"@nestjs/common": "^10.0.0",
		"@nestjs/core": "^10.0.0",
		"@nestjs/platform-express": "^10.0.0",
		"@prisma/client": "^5.20.0",
		"reflect-metadata": "^0.2.0",
		"rxjs": "^7.8.1"
	},
	"devDependencies": {
		"@nestjs/cli": "^10.0.0",
		"@nestjs/schematics": "^10.0.0",
		"@types/express": "^4.17.17",
		"@typescript-eslint/eslint-plugin": "^8.0.0",
		"@typescript-eslint/parser": "^8.0.0",
		"@weekly-menu/eslint-config": "workspace:*",
		"prisma": "^5.20.0",
		"source-map-support": "^0.5.21",
		"ts-loader": "^9.4.3",
		"ts-node": "^10.9.1",
		"tsconfig-paths": "^4.2.0"
	}
}
